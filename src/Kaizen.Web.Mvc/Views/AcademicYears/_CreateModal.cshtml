@using Abp.Authorization.Users
@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.AcademicYear
@model AcademicYearListViewModel

<div class="modal fade" id="AcademicYearCreateModal" tabindex="-1" role="dialog" aria-labelledby="AcademicYearCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Create Academic Year"))
            <form name="academicYearCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="mb-3 row required">
                        <label class="col-md-3 col-form-label">@L("Name")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Name" required minlength="2">
                        </div>
                    </div>
                    <div class="mb-3 row required">
                        <label class="col-md-3 col-form-label">@L("Description")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Description" required minlength="2">
                        </div>
                    </div>
                    <div class="mb-3 row required">
                        <label class="col-md-3 col-form-label">@L("StartDate")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control mobipicker" name="StartDate" required >
                        </div>
                    </div>
                    <div class="mb-3 row required">
                        <label class="col-md-3 col-form-label">@L("EndDate")</label>
                        <div class="col-md-9"> 
                            <input type="text" class="form-control mobipicker" name="EndDate" required >
                        </div>
                    </div>
                    <div class="mb-3 row required">
                        <label class="col-md-3 col-form-label">@L("Company")</label>
                        <div class="col-md-9">
                            <select class="select2 form-control" name="CompanyId" required data-service="Company"></select>
                        </div>
                    </div>
                </div>@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>