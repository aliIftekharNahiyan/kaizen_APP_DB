@using Abp.Authorization.Users
@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.SessionGroups
@model EditSessionGroupModalViewModel 
@{
    Layout = null;
}

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSessionGroup")))<form name="sessionGroupEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.SessionGroup.Id" />
    <input type="hidden" name="UserId" value="@Model.SessionGroup.UserId" />
    <div class="modal-body">
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Name</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="Name" value="@Model.SessionGroup.Name" required minlength="2">
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-md-3 col-form-label">Description</label>
            <div class="col-md-9">
                <textarea type="text" class="form-control" name="Description" value="@Model.SessionGroup.Description"></textarea>
            </div>
        </div>
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Support Type</label>
            <div class="col-md-9">
                <select class="select2 form-control" name="SupportTypeId" required data-service="SupportType" data-selected-text="@Model.SessionGroup.SupportType?.Name" data-selected-value="@Model.SessionGroup.SupportTypeId"></select>
            </div>
        </div>
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Funding Body</label>
            <div class="col-md-9">
                <select class="select2 form-control" name="FundingBodyId" required data-service="FundingBody" data-selected-text="@Model.SessionGroup.FundingBody?.Name" data-selected-value="@Model.SessionGroup.FundingBodyId"></select>
            </div>
        </div>
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Expiry Date</label>
            <div class="col-md-9">
                <input type="text" class="form-control mobipicker" name="ExpiryDate" required value="@Model.SessionGroup.ExpiryDate">
            </div>
        </div>
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Allocated Hours</label>
            <div class="col-md-9">
                <input type="number" class="form-control" name="AllocatedHours" required value="@Model.SessionGroup.AllocatedHours">
            </div>
        </div>
        <div class="mb-3 row required">
            <label class="col-md-3 col-form-label">Allocated Budget</label>
            <div class="col-md-9">
                <input type="number" class="form-control" name="AllocatedBudget" required value="@Model.SessionGroup.AllocatedBudget">
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/SessionGroup/_EditModal.js" asp-append-version="true"></script>
