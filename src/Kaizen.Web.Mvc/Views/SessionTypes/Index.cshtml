@using Kaizen.Web.Models.SessionTypes;
@using Kaizen.Web.Startup
@model SessionTypeListViewModel
@{
    ViewBag.Title = L("SessionType");
    ViewBag.CurrentPageName = PageNames.Customers;
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/SessionType/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/SessionType/Index.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        new SessionType().setupGrid();
    </script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">@L("SessionTypes")</h4>

                    <div class="page-title-right">
                        <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#SessionTypeCreateModal" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            @L("Create")
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <!--Use for bulk actions-->
                        </div>
                        <div class="col-md-6">
                            @await Html.PartialAsync("~/Views/SessionTypes/Index.AdvancedSearch.cshtml")
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="SessionTypeTable" class="table table-hover table-nowrap mb-0 align-middle table-check">
                            <thead class="table-light">
                                <tr>
                                    <th class="rounded-start"></th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th class="no-filter rounded-end" style="width: 100px"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/SessionTypes/_CreateModal.cshtml", Model)

<div class="modal fade" id="SessionTypeEditModal" tabindex="-1" role="dialog" aria-labelledby="SessionTypeEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>