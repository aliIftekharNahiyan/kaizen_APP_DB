@using Abp.Authorization.Users
                @using Kaizen.Web.Models.Common.Modals
                @using Kaizen.Web.Models.StorageFiles
                @model EditStorageFileModalViewModel
                @{Layout = null;} 
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditStorageFile")))<form name="storageFileEditForm" role="form" class="form-horizontal">
                    <input type="hidden" name="Id" value="@Model.StorageFile.Id" />
                    <div class="modal-body">
                         <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("Name")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Name" value="@Model.StorageFile.Name" required minlength="2">
                            </div>
                        </div>
                    </div>@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
                </form>

                <script src = "~/view-resources/Views/StorageFile/_EditModal.js" asp-append-version="true"></script>