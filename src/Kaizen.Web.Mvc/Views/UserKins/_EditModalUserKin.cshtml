@using Abp.Authorization.Users
@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.Users
@model EditUserKinModalViewModel
@{
    Layout = null;
}

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditUserKin")))
<form id="userKinEditForm" name="userKinEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.UserKin.Id" />
    <input type="hidden" name="UserId" value="@Model.UserKin.UserId" />
    <div class="modal-body">

        <div role="tabpanel" class="tab-pane container active" id="create-UserKin-details">
            <div class="mb-3 row required">
                <label class="col-md-3 col-form-label">@L("Name")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" value="@Model.UserKin.Name" name="Name" required minlength="2">
                </div>
            </div>
            <div class="mb-3 row required">
                <label class="col-md-3 col-form-label">@L("Relation")</label>
                <div class="col-md-9">
                    <div class="col-md-9">

                        <select class="select2 form-control" name="RelationId"  required data-service="Relation" data-selected-text="@Model.UserKin.Relation?.Name" data-selected-value="@Model.UserKin.RelationId"></select>

                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-md-3 col-form-label">@L("ContactType")</label>
                <div class="col-md-9">
                    <select class="select2 form-control" name="ContactTypeId" required data-service="ContactType" data-selected-text="@Model.UserKin.ContactType?.Name" data-selected-value="@Model.UserKin.ContactTypeId"></select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-md-3 col-form-label">@L("Contact")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Contact" value="@Model.UserKin.Contact" maxlength="10">
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/UserKin/_EditModal.js" asp-append-version="true"></script>


<script>
    new Helpers().setupSelects([UserKin], $('#userKinEditForm'));
</script>