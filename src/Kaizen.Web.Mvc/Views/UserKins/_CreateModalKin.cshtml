@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.Users;
@model UserKinListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="UserKinCreateModal" tabindex="-1" role="dialog" aria-labelledby="UserKinCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Create New User Kin")))
            <form name="UserKinCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    
                    <div role="tabpanel" class="tab-pane container active" id="create-UserKin-details">
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("Name")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Name" required minlength="2">
                            </div>
                        </div>
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("Relation")</label>
                            <div class="col-md-9">
                                <div class="col-md-9">
                                    <select class="select2 form-control" name="RelationId" required data-service="Relation"></select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label">@L("ContactType")</label>
                            <div class="col-md-9">
                                <select class="select2 form-control" name="ContactTypeId" required data-service="ContactType"></select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label">@L("Contact")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Contact">
                            </div>
                        </div>
                     
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
