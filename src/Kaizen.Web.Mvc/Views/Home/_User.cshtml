@using Kaizen.Web.Models.Home;

@model HomeViewModel

@if (PermissionChecker.IsGranted("User.SessionManagement.ViewHostedSessions"))
{
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Hosted sessions
            </div>
            <div class="card-body">
                @foreach (var supportSession in Model.RecentSupportSessions)
                {
                    <p>@supportSession.SessionStartDate.ToString("dd/MM/yyyy") - @supportSession.SessionEndDate.ToString("dd/MM/yyyy")</p>
                }
            </div>
        </div>
    </div>
}