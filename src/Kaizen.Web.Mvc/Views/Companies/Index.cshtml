@using Kaizen.Entities.Companies.Dto;
@using Kaizen.Web.Startup
@using Kaizen.Web.Models.Companies
@model CompanyListViewModel
@{
    ViewBag.Title = L("Companies");
    ViewBag.CurrentPageName = PageNames.Customers;
}
@section scripts
    {

    <environment names="Development">
        <script src="~/view-resources/Views/Company/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Company/Index.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        new Company().setupGrid();
    </script>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">@L("Companies")</h4>

                    <div class="page-title-right">
                        <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#CompanyCreateModal" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            @L("Create")
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <!--Use for bulk actions-->
                        </div>
                        <div class="col-md-6">
                            @await Html.PartialAsync("~/Views/Companies/Index.AdvancedSearch.cshtml")
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="CompanyTable" class="table table-hover table-nowrap mb-0 align-middle table-check">
                            <thead class="table-light">
                                <tr>
                                    <th class="rounded-start"></th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Send From Email Address</th>
                                    <th>Primary Brand Colour</th>
                                    <th>Secondary Brand Colour</th>
                                    <th>IsActive</th>

                                    <th class="no-filter rounded-end" style="width: 100px"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Companies/_CreateModal.cshtml", new CreateCompanyDto() )

<div class="modal fade" id="CompanyEditModal" tabindex="-1" role="dialog" aria-labelledby="CompanyEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>