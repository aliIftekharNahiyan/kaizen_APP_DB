@using Abp.Authorization.Users
@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.Addresses
@model EditAddressModalViewModel
@{
    Layout = null;
}
<div class="modal fade" id="AddressCreateModal" tabindex="-1" role="dialog" aria-labelledby="AddressCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewAddress")))
            <form name="addressCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">

                    <div role="tabpanel" class="tab-pane container active" id="create-address-details">
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("Name")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Name" required minlength="2">
                            </div>
                        </div>
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("AddressLine1")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Line1" required minlength="2">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label">@L("AddressLine2")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Line2">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label">@L("AddressLine3")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Line3">
                            </div>
                        </div>
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("City")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="City" required>
                            </div>
                        </div>
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("County")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="County" id="County" required>
                            </div>
                        </div>
                        <div class="mb-3 row required">
                            <label class="col-md-3 col-form-label">@L("Postcode")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Postcode" id="Postcode" required>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label" for="IsPrimary">@L("IsPrimary")</label>
                            <div class="col-md-9">
                                <input type="checkbox" name="IsPrimary" value="true" id="IsPrimary" checked />
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
