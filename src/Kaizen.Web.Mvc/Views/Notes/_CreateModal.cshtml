@using Abp.Authorization.Users
@using Kaizen.Web.Models.Common.Modals
@using Kaizen.Web.Models.Users

@{
    Layout = null;
}
<div class="modal fade" id="NoteCreateModal" tabindex="-1" role="dialog" aria-labelledby="NoteCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Notes")))
            <form name="noteCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="chat-conversation" id="noteContent" style="max-height: 500px" data-simplebar>
                        
                    </div>
                    
                    <div class="p-3 chat-input-section">
                        <div class="row">
                            <div class="col">
                                <div class="position-relative">
                                    <textarea type="text" class="form-control chat-input" name="Content" id="Content" placeholder="Enter Message..." rows="4"></textarea>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="form-check mb-1">
                                    <input type="checkbox" name="IsInternal" value="true" id="IsInternal" class="form-check-input" />
                                    <label class="form-check-label" for="IsInternal">
                                        @L("Internal")
                                  </label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" name="IsImportant" value="true" id="IsImportant" class="form-check-input" />
                                    <label class="form-check-label" for="IsImportant">
                                        @L("Important")
                                    </label>
                                </div>

                                <button type="button" class="btn btn-primary chat-send w-md save-button"><span class="d-none d-sm-inline-block me-2">Send</span> <i class="mdi mdi-send float-end"></i></button>
                            </div>
                        </div>
                       
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-danger close-button" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
