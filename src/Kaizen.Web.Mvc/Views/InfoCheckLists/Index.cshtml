@using Kaizen.Web.Models.InfoCheckList
@using Kaizen.Web.Models.Companies
@using Kaizen.Web.Startup
@model InfoCheckListListViewModel
@{
    ViewBag.Title = L("InfoCheckLists");
    ViewBag.CurrentPageName = PageNames.InfoCheckLists;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/InfoCheckList/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/InfoCheckList/Index.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        new InfoCheckList().setupGrid();
    </script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">@L("InfoCheckLists")</h4>

                    <div class="page-title-right">
                        <a asp-asp-controller="InfoCheckLists" asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus-square"></i>
                            @L("Create")
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <!--Use for bulk actions-->
                        </div>
                        <div class="col-md-6">
                            @await Html.PartialAsync("~/Views/InfoCheckLists/Index.AdvancedSearch.cshtml")
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="InfoCheckListTable" class="table table-hover table-nowrap mb-0 align-middle table-check">
                            <thead class="table-light">
                                <tr>
                                    <th class="rounded-start"></th>
                                    <th>First Name</th>
                                    <th>Surname</th>
                                    <th>Email</th>
                                    <th>Date Answered</th>
                                    <th>Course Start Date</th>
                                    <th>Course End Date</th>
                                    <th class="no-filter rounded-end" style="width: 100px"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

